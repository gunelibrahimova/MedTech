@model IEnumerable<Healthy>

<!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><a id="@(ViewBag.Sayi == 1? "myBtn" : null)" asp-action="create">Create</a></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>PhotoURL</th>
                                            <th></th>
                                            
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                          <th>Title</th>
                                            <th>Description</th>
                                            <th>PhotoURL</th>
                                            
                                            
                                            <th></th>
                                            
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                           @foreach (var item in Model)
                                           {
                                                   <tr>
                                            <td>@item.Title</td>
                                            <td>@Html.Raw(item.Description)</td>
                                           <td><img width="80" src="@item.PhotoURL" /></td> 
                                             
                                            
                                          

                                            <td>
                                                <a href="/admin/healthy/edit/@item.Id" class="btn btn-warning">Edit</a>
                                                 <a href="/admin/healthy/detail/@item.Id" class="btn btn-warning">Detail</a>

                                            </td>

                                            

                                               </tr>
                                           } 
                                            
                                            
                                        
                                 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

    @section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        var button = document.getElementById("myBtn")
        button.addEventListener("click" , function(e){
            e.preventDefault()
            e.stopPropagation()
            Swal.fire(
  'Diqqət!',
  'Sadəcə 1 şəkil daxil edə bilərsiniz.',
  'warning'
)
        })
    </script>
} 