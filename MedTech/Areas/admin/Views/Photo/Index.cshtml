@model IEnumerable<Photo>

<!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"><a asp-action="create">Create</a></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>PhotoURL</th>
                                            <th></th>
                                            
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>PhotoURL</th>
                                            <th></th>
                                            
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                           @foreach (var item in Model)
                                           {
                                                   <tr>
                                           <td><img width="80" src="@item.PhotoURL" /></td> 
                                             
                                            
                                          

                                            <td>
                                                <a href="/admin/photo/edit/@item.Id" class="btn btn-warning">Edit</a>
                                                 <a href="/admin/photo/detail/@item.Id" class="btn btn-warning">Detail</a>

                                            </td>

                                            

                                               </tr>
                                           } 
                                            
                                            
                                        
                                 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
